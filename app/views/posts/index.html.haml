.chat-side
 .side-header
  .side-header__box
   .side-header__box__username
    = current_user.name
   .side-header__box__new-group
    =link_to " ", class: "contents__btn1" do
     = fa_icon 'edit'
   .side-header__box__edit-user
    =link_to edit_user_path(current_user), class: "contents__btn1" do
     = fa_icon 'cog'
 .groups
  .group
   .group__group-name groupname
   .group__latest-message test

.chat-main
 .main-header
  .main-header__left-box
   .main-header__left-box--current-group chat-groupname
   .main-header__left-box--member-list Member :
   .main-header__left-box--users users
  .main-header__exit-btn Edit
 = render partial: 'tweet'

 .form
  .input-box
   .input-box__text 
    =placeholder = "message"

   .input-box__image
    =link_to " ", class: "contents__btn2" do
     = fa_icon 'image'
  .submit-btn Send
